{
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts"],
  "preset": "ts-jest",
  "testEnvironment": "node",
  "coveragePathIgnorePatterns": [
    "db",
    "graphql",
    "node_modules",
    "test-config",
    "interfaces",
    "constants",
    ".mock.ts",
    ".model.ts"
  ],
  "coverageDirectory": "<rootDir>/coverage/",
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 60,
      "lines": 80,
      "statements": -10
    }
  },
  "mapCoverage": true
}
